{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "plugins": [
      { "transform": "ts-auto-mock/transformer" }
    ],
    "baseUrl": "./",
    "paths": {
      "*" : ["src/@types/*"]
    },
    "target": "es2018"
  },
  "files": [
    "src/api.ts",
    "src/authentication.ts",
    "src/channel.ts",
    "src/client.ts",
    "src/post.ts",
    "src/team.ts",
    "src/user.ts",
    "src/websocket.ts",
    "src/interfaces/channel.ts",
    "src/interfaces/notifyProps.ts",
    "src/interfaces/options.ts",
    "src/interfaces/post.ts",
    "src/interfaces/team.ts",
    "src/interfaces/user.ts"
  ]
}
